@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;

@{
    var content = (ContentModels.MiniContactAside)Model.Content;

    var title = content.AsideContactTitle;
    var label = content.AsideContactLabel;
    var placeholder = content.AsideContactEmailPlaceholder;
    var bgImage = content.AsideContactImage;
}

<div class="relative bg-primary text-white rounded-sm shadow-[0_15px_30px_rgba(0,0,0,0.12)] mx-4 px-4 pt-5 pb-8">

    @if (bgImage != null)
    {
        <img src="@bgImage.Url()"
             style="position:absolute; right:-20px; bottom:-2px;"
             class="pointer-events-none select-none opacity-20" />
    }
    <div class="flex flex-col gap-6">
            @if (!string.IsNullOrWhiteSpace(title))
            {
                <h3 class="text-rte-md font-bold leading-tight">@title</h3>
            }

            @if (!string.IsNullOrWhiteSpace(label))
            {
                <p class="text-sm leading-relaxed text-neutral">
                    @label
                </p>
            }
        <div class="">
            <div class="flex justify-between items-center bg-neutral rounded-sm mt-2 px-4 py-3 shadow-sm">
                <span class="text-sm italic text-body-text opacity-70">
                    @placeholder
                </span>
                <span class="mr-3 inline-flex text-primary">
                    <svg xmlns="http://www.w3.org/2000/svg"
                         viewBox="0 0 24 24"
                         class="w-5 h-5 text-body-text/60">
                        <rect x="3" y="5" width="18" height="14" rx="2" ry="2"
                              fill="none" stroke="currentColor" stroke-width="1.6" />
                        <path d="M4 7l8 6 8-6"
                              fill="none" stroke="currentColor" stroke-width="1.6" />
                    </svg>
                </span>
            </div>
        </div>
    </div>
</div>
