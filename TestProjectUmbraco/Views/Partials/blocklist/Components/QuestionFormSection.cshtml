@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;

@{
    var content = (ContentModels.QuestionFormSection)Model.Content;

    var title = content.FormTitle;
    var namePlaceholder = content.FormNamePlaceholder;
    var emailPlaceholder = content.FormEmailPlaceholder;
    var questionPlaceholder = content.FormQuestionPlaceholder;
    var buttonText = content.FormButtonText;
}

<section class="pb-24">
    <div class="max-w-7xl mx-auto px-4">
        @if (!string.IsNullOrWhiteSpace(title))
        {
            <h2 class="rte-h4 md:text-3xl font-bold text-primary mb-6">
                @title
            </h2>
        }

        <form class="space-y-4 text-body-text" novalidate>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <input type="text"
                       class="w-full border border-border-gray bg-neutral px-4 py-3 text-sm  focus:outline-none focus:ring-2 focus:ring-secondary"
                       placeholder="@namePlaceholder" />

                <input type="email"
                       class="w-full border border-border-gray bg-neutral px-4 py-3 text-sm focus:outline-none focus:ring-2 focus:ring-secondary"
                       placeholder="@emailPlaceholder" />
            </div>

          <textarea rows="6"
          class="w-full border border-border-gray bg-neutral px-4 py-3 text-sm resize-none focus:outline-none focus:ring-2 focus:ring-secondary"
          placeholder="@questionPlaceholder"></textarea>


            <button type="button"
                    class="inline-flex px-10 py-3 text-sm font-semibold text-neutral bg-primary rounded-sm hover:bg-main-light transition">
                @buttonText
            </button>
        </form>
    </div>
</section>
